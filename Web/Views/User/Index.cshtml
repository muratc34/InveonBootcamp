@model List<Domain.Authentication.ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Ad Soyad</th>
            <th scope="col">E-posta</th>
            <th scope="col">Durum</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@(user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.Now ? "Hesap Kilitli" : "Aktif")</td>
                <td>
                    <a asp-controller="Role" asp-action="AssignRole" asp-route-Id="@user.Id" class="btn btn-info btn-sm">Rolleri Ata</a>
                    <a asp-controller="User" asp-action="Edit" asp-route-Id="@user.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-controller="User" asp-action="Delete" asp-route-Id="@user.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>